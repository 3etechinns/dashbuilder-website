.row-fluid
  #equalHeightsLayout
    #maincol.span9
      #myCarousel.carousel.slide
        / Indicators
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "3", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "4", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "5", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "6", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "7", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "8", "data-target" => "#carousel-example-generic"}
        / Carousel items
        .carousel-inner
          .active.item
            %img{:src => "../images/screenshots/screenshot_01.jpg"}/
            .carousel-caption
              %h4 Monitoring, auditing and analysis (BAM)
              %p Dashboard interaction, KPI monitoring, Process auditing, Reporting.
          .item
            %img{:src => "../images/screenshots/screenshot_02.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Enable the configuration of business dashboards by configuration with no coding.
          .item
            %img{:src => "../images/screenshots/screenshot_03.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Configuration of interactive report tables. Data export to Excel and CSV format.
          .item
            %img{:src => "../images/screenshots/screenshot_04.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Visual configuration of dashboards (Drag'n'drop).
          .item
            %img{:src => "../images/screenshots/screenshot_05.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Filtering and search, both in-memory or SQL based.
          .item
            %img{:src => "../images/screenshots/screenshot_06.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Filtering and search, both in-memory or SQL based.
          .item
            %img{:src => "../images/screenshots/screenshot_07.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Look'n'feel customization tools.
          .item
            %img{:src => "../images/screenshots/screenshot_08.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Graphical representation of KPIs (Key Performance Indicators).
          .item
            %img{:src => "../images/screenshots/screenshot_09.jpg"}/
            .carousel-caption
              %h4 Key features:
              %p Granular access control for different user profiles.
        / Carousel nav
        %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} &lsaquo;
        %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} &rsaquo;
        %hr/
